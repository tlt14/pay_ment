@model IEnumerable<PaymentIndexViewModel>

@{
    ViewBag.Title = "Payment Records";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Pay List</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                       

                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Pay Date</th>
                                    <th>Month</th>
                                    <th>Tax Year</th>
                                    <th>Total Earnings</th>
                                    <th>Total Deductions</th>
                                    <th>Net Pay</th>
                                    <th class="text-success">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Employee" asp-action="Detail" asp-route-id="@item.EmployeeId">
                                                @item.FullName
                                            </a>
                                        </td>
                                        <td>
                                            @item.PayDate.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>@item.PayMonth</td>
                                        <td>@item.Year</td>
                                        <td>@item.TotalEarnings.ToString("C")</td>
                                        <td>@item.TotalDeduction.ToString("c")</td>
                                        <td>@item.NetPayment.ToString("C")</td>
                                        <td>

                                            <a class="text-danger" 
                                            asp-controller="Payment" 
                                            asp-action="Detail"
                                            asp-route-id="@item.Id">
                                                <i class="fas fa-bars"></i> Detail
                                            </a>
                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><br />

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
